  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "eslint": "^8.38.0",
    "jsdom": "^21.1.1",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
